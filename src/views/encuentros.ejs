    <main class="container mt-4">
      <h1 class="text-center">Programación de Encuentros</h1>
    
      <!-- Tabla de partidos -->
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>Torneo</th>
            <th>Rueda</th>
            <th>Fecha</th>
            <th>Equipo Local</th>
            <th>Equipo Visitante</th>
            <th>Fecha/Hora</th>
            <th>Nombre Cancha</th>
            <th>Ubicación</th>
            <th>Árbitro</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% partidos.forEach(partido => { %>
            <tr>
              <td><%= partido.NombreTorneo %></td>
              <td><%= partido.NombreRueda %></td>
              <td><%= partido.NumeroFecha %></td>
              <td><%= partido.EquipoLocal %></td>
              <td><%= partido.EquipoVisitante %></td>
              <td>
                <input type="datetime-local" class="form-control" 
                       value="<%= new Date(partido.FechaHoraEncuentro).toISOString().slice(0,16) %>" 
                       id="fechaHora-<%= partido.IDPARTIDO %>">
              </td>
              <td>
                <input type="text" class="form-control" 
                       value="<%= partido.NombreCancha || '' %>" 
                       id="nombreCancha-<%= partido.IDPARTIDO %>">
              </td>
              <td>
                <input type="text" class="form-control" 
                       value="<%= partido.UbicCancha || '' %>" 
                       id="ubicCancha-<%= partido.IDPARTIDO %>">
              </td>
              <td>
                <select class="form-select" id="arbitro-<%= partido.IDPARTIDO %>">
                  <option value="">Sin asignar</option>
                  <% arbitros.forEach(arbitro => { %>
                    <option value="<%= arbitro.DNIARBITRO %>" 
                            <%= partido.DNIARBITROFK === arbitro.DNIARBITRO ? 'selected' : '' %>>
                      <%= arbitro.NombreArbitro %>
                    </option>
                  <% }); %>
                </select>
              </td>
              <td>
                <button class="btn btn-outline-info btnDesign2" onclick="updatePartido(<%= partido.IDPARTIDO %>)">Guardar</button>
              </td>
              <td>
                <a href="/encuentro/<%= partido.IDPARTIDO %>" class="btn btn-success btnDesign">Resultados</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </main>

   


