    <main class="fontDesing">
    <div class="container mt-5">
      <h1 class="text-center">Gestión de Fixtures</h1>
  
      <!-- Botón para mostrar el formulario de generar fixture -->
      <div class="text-center mt-4">
        <button class="btn btn-primary btnDesign" id="btnMostrarForm">Generar Fixture</button>
      </div>
  
      <!-- Formulario para generar fixture (oculto por defecto) -->
      <div id="formGenerarFixture" class="mt-4" style="display: none;">
        <form id="generarFixtureForm" method="POST" action="/fixtures/generate">
          <div class="mb-3">
            <label for="idTorneo" class="form-label">Selecciona el Torneo</label>
            <select id="idTorneo" name="idTorneo" class="form-select" required>
              <% torneos.forEach(torneo => { %>
                <option value="<%= torneo.IDTORNEO %>"><%= torneo.NOMBRETORNEO %></option>
              <% }); %>
            </select>
          </div>
          <div class="mb-3">
            <label for="nroRuedas" class="form-label">Número de Ruedas</label>
            <input type="number" id="nroRuedas" name="nroRuedas" class="form-control" required min="1" value="1">
          </div>
          <button type="submit" class="btn btn-primary btnDesign">Generar Fixture</button>
        </form>
      </div>
  
      <!-- Tabla de fixtures -->
      <h2 class="mt-5">Lista de Fixtures</h2>
      <% if (fixtures && fixtures.length > 0) { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre del Fixture</th>
              <th>Categoría</th>
              <th>División</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% fixtures.forEach(fixture => { %>
              <tr>

                <td><%= fixture.IdFixture %></td>
                <td><%= fixture.NombreFixture %></td>
                <td><%= fixture.Categoria %></td>
                <td><%= fixture.Division %></td>
                <td>
                  <a href="/fixtures/detalle/<%= fixture.IdFixture %>" class="btn btn-success btnDesign">Modificar</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div class="alert alert-warning">No hay fixtures disponibles.</div>
      <% } %>
    </div>
    
    
