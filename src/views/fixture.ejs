<!-- Codigos necesarios  -->
<script>

    document.getElementById('btnMostrarForm').addEventListener('click', () => {
      const form = document.getElementById('formGenerarFixture');
      form.style.display = form.style.display === 'none' ? 'block' : 'none';
    });
 
  // Enviar solicitud para generar fixture
  document.getElementById('generarFixtureForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const idTorneo = document.getElementById('idTorneo').value;
    const nroRuedas = document.getElementById('nroRuedas').value;

    try {
      const response = await fetch('/fixtures/generate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ idTorneo, nroRuedas }),
      });

      if (response.ok) {
        alert('Fixture generado exitosamente.');
        location.reload(); // Recargar la página para mostrar el nuevo fixture
      } else {
        const error = await response.text();
        alert(`Error: ${error}`);
      }
    } catch (err) {
      alert('Error interno al generar el fixture.');
      console.error(err);
    }
  });

  // Ver detalles de un fixture
  async function verDetalleFixture(idFixture) {
    try {
      const response = await fetch(`/fixtures/${idFixture}`);
      const detalle = await response.json();

      console.log('Detalle del Fixture:', detalle);
      alert('Ver consola para más detalles.');
    } catch (err) {
      alert('Error al obtener los detalles del fixture.');
      console.error(err);
    }
  }
</script>


