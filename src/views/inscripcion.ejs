  <!-- Scripts funcionales para la vista-->
  <script>
    function mostrarFormulario(tipo) {
      document.getElementById('equipoForm').style.display = tipo === 'equipo' ? 'block' : 'none';
      document.getElementById('jugadorForm').style.display = tipo === 'jugador' ? 'block' : 'none';
    }

    async function calcularCategoriaYEquipos() {
      const fechaNacimientoInput = document.getElementById('fechaNacimiento');
      const categoriaInput = document.getElementById('categoriaFK'); // Input de categoría
      const equipoSelect = document.getElementById('equipo'); // Select de equipos

      // Obtener la fecha de nacimiento
      const fechaNacimiento = new Date(fechaNacimientoInput.value);
      const hoy = new Date();

      // Validar si la fecha de nacimiento es válida
      if (!fechaNacimiento || isNaN(fechaNacimiento)) {
        console.log('Fecha de nacimiento inválida');
        categoriaInput.value = ''; // Limpiar categoría
        equipoSelect.innerHTML = '<option value="">Seleccionar equipo</option>';
        return;
      }

      // Calcular la edad
      let edad = hoy.getFullYear() - fechaNacimiento.getFullYear();
      const mes = hoy.getMonth() - fechaNacimiento.getMonth();
      if (mes < 0 || (mes === 0 && hoy.getDate() < fechaNacimiento.getDate())) {
        edad--;
      }

      console.log('Edad calculada:', edad);

      // Determinar la categoría según la edad
      let categoriaFK = null;
      try {
        if (edad >= 41 && edad <= 45) {
          categoriaFK = 'Maxi';
        } else if (edad >= 46 && edad <= 50) {
          categoriaFK = 'Super';
        } else if (edad >= 51 && edad <= 55) {
          categoriaFK = 'Master';
        }

        if (categoriaFK) {
          console.log('Categoría asignada:', categoriaFK);
          categoriaInput.value = categoriaFK; // Asignar valor al input
        } else {
          console.log('Edad fuera de rango para cualquier categoría');
          categoriaInput.value = ''; // Limpiar si no hay categoría válida
          equipoSelect.innerHTML = '<option value="">Seleccionar equipo</option>';
          return;
        }
      } catch (error) {
        console.log('error del if ', error)
      }


      // Cargar los equipos correspondientes a la categoría
      try {
        console.log('Buscando equipos para la categoría:', categoriaFK);
        const response = await fetch(`/equipos/categoria/${categoriaFK}`);
        const equipos = await response.json();

        equipoSelect.innerHTML = '<option value="">Seleccionar equipo</option>';
        equipos.forEach((equipo) => {
          const option = document.createElement('option');
          option.value = equipo.NROEQUIPO;
          option.textContent = equipo.NombreEquipo;
          equipoSelect.appendChild(option);
        });

        console.log('Equipos cargados:', equipos);
      } catch (error) {
        console.error('Error al cargar equipos:', error);
        equipoSelect.innerHTML = '<option value="">Error al cargar equipos</option>';
      }
    }

  </script>
