              </div>
            </fieldset>
          </div>

          <!-- Información del Jugador -->
          <div class="col-lg-6">
            <fieldset>
              <legend>Información del Jugador</legend>
              <br>
              <div>
                <label for="nroSocio">Número de Socio:</label>
                <input type="number" id="nroSocio" name="NROSOCIO" placeholder="Número de socio" required>
              </div>
              <br>
              <div>
                <label for="foto">Foto:</label>
                <input type="file" id="foto" name="Foto" accept="image/*">
              </div>
              <br>
            </fieldset>
            <fieldset>
              <div>
                <label for="categoria">Categoría:</label>
                <!-- Campo que contendrá el valor dinámico de CATEGORIAFK -->
                <input type="text" id="categoriaFK" name="CATEGORIAFK" readonly required>
