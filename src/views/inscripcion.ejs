      <!-- Formulario para Inscripción de Equipos -->

      <form id="equipoForm" action="/equipos" method="post" class="needs-validation" novalidate>
        <class class="container-fluid">
          <class class="row">
            <class class="col-lg-3"></class>
            <class class="col-lg-6 text-center"><h1 class="fontDesing">Inscripción de Equipos</h1></class>
            <class class="col-lg-3"></class>
          </class>
        </class>

        <div class="row g-3 fontDesing">
          <!-- División -->
          <div class="col-md-6">
            <label for="division" class="form-label">División:</label>
            <select id="division" name="DivisionFK" class="form-select" required>
              <option value="" selected disabled>Selecciona una división</option>
              <% divisiones.forEach((division)=> { %>
                <option value="<%= division.Division %>">
                  <%= division.Division %>
                </option>
                <% }); %>
            </select>
            <div class="invalid-feedback">Selecciona una división válida.</div>
          </div>

          <!-- Categoría -->
          <div class="col-md-6 fontDesing">
            <label for="categoria" class="form-label">Categoría:</label>
            <select id="categoria" name="CategoriaFK" class="form-select" required>
              <option value="" selected disabled>Selecciona una categoría</option>
              <% categorias.forEach((categoria)=> { %>
                <option value="<%= categoria.Categoria %>">
                  <%= categoria.Categoria %> - <%= categoria.DescCategoria %>
                </option>
                <% }); %>
            </select>
            <div class="invalid-feedback">Selecciona una categoría válida.</div>
          </div>
        </div>

        <div class="row g-3 mt-3 fontDesing">
          <!-- Nombre del Equipo -->
          <div class="col-md-6">
            <label for="nombreEquipo" class="form-label">Nombre del Equipo:</label>
            <input type="text" id="nombreEquipo" name="NombreEquipo" class="form-control" placeholder="Ej: Equipo A"
              required />
            <div class="invalid-feedback">Ingresa el nombre del equipo.</div>
          </div>

          <!-- Nombre del Director Técnico -->
          <div class="col-md-6 fontDesing">
            <label for="nombreDT" class="form-label">Nombre del Director Técnico:</label>
            <input type="text" id="nombreDT" name="NombreDT" class="form-control" placeholder="Ej: Lionel Scaloni"
              required />
            <div class="invalid-feedback">Ingresa el nombre del director técnico.</div>
          </div>
        </div>

        <div class="row g-3 mt-3 fontDesing">
          <!-- Nombre del Representante -->
          <div class="col-md-6">
            <label for="nombreRepresentante" class="form-label">Nombre del Representante:</label>
            <input type="text" id="nombreRepresentante" name="NombreRepresentante" class="form-control"
              placeholder="Ej: El consejo de fútbol" required />
            <div class="invalid-feedback">Ingresa el nombre del representante.</div>
          </div>

          <!-- Número del Equipo -->
          <div class="col-md-6 fontDesing">
            <label for="nroEquipo" class="form-label">Número del Equipo:</label>
            <input type="number" id="nroEquipo" name="NROEQUIPO" class="form-control" value="<%= siguienteNumEquipo %>"
              readonly />
          </div>
        </div>

        <div class="mt-4 container-fluid fontDesing">
          <div class="row">
            <div class="col-lg-3"></div>
            <button type="submit" class="btn btn-primary w-50 btnDesign">Registrar Equipo</button>
            <div class="col-lg-3"></div>
          </div>

        </div>
      </form>


      <!-- Formulario para Inscripción de Jugadores -->
      <form id="jugadorForm" action="/jugadores" method="POST" style="display: none;">
        <div class="container-fluid fontDesing">
          <div class="row text-center">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
