  <script>
    function botonForm(type){
      document.getElementById('equipoForm').style.display = type === 'equipo' ? 'block': 'none';
      document.getElementById('jugadorForm').style.display = type === 'jugador' ? 'block': 'none';

    }
  </script>
  <script>

async function actualizarEquipos() {
                        const categoriaId = document.getElementById('categoria').value; 
                        const equipoSelect = document.getElementById('equipo');
                        const nombreEquipoInput = document.getElementById('nombreEquipoSeleccionado');
                        equipoSelect.innerHTML = '<option value="">Seleccionar equipo</option>';
                    
                        if (categoriaId) {
                          try {
                            const response = await fetch(`/equipos/categoria/${categoriaId}`);
                            const equipos = await response.json();
                            equipos.forEach(equipo => {
                              const option = document.createElement('option');
                              option.value = equipo.NROEQUIPO;
                              option.textContent = equipo.NombreEquipo;
                              option.setAttribute('data-nombre', equipo.NombreEquipo);
                              equipoSelect.appendChild(option);
                            });
                    
                            equipoSelect.addEventListener('change', () => {
                              const selectedOption = equipoSelect.options[equipoSelect.selectedIndex];
                              nombreEquipoInput.value = selectedOption.getAttribute('data-nombre');
                            });
                    
                          } catch (error) {
                            console.error('Error al cargar equipos:', error);
                          }
                        }
                      }


  </script>
